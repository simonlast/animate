.Slider
	width: 100%
	height: 32px
	position: relative
	z-index: 2
	background-color: rgb(210, 210, 210)
	cursor: -webkit-grab


	&:active
		cursor: -webkit-grabbing


	.button
		position: absolute
		background-color: rgb(120, 120, 120)
		height: 40px
		width: 40px
		margin-left: -20px
		margin-top: -4px
		border-radius: 100%
		button-shadow()
